<div class="max-w-6xl mx-auto px-4 py-12">
    <div class="flex items-start md:items-end justify-between my-5">
        <div class="w-1/2">
            <h1 class=""text-2xl font-bold text-gray-700>Order {{order.name}}</h1>
            <p class="text-gray-500 my-2">Placed on {{ order.created_at |  date: format: 'date' }}</p>
        </div>
        <a href="{{ routes.account_url }}" class="text-blue-700 hover:text-blue-900 underline font-medium"></a>
    </div>

    <div>
        {% for line_item in order.line_items %}
            <div class="w-full border border-gray-200 divide-y rounded-sm mb-4">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-12 p-4 md:p-12">
                    <div class="w-full h-80 min-h-80 bg-gray-200 rounded-md overflow-hidden border">
                        {% if line_item.image %}
                            <img class="w-full h-full object-center object-cover" 
                                    src="{{ line_item.image | image_url: width: 500 }}" 
                                    alt="{{ line_item.image.alt }}" 
                                    width="500" height="500">
                                    {% else %}
                                        {{ 'product-1' |  placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                        {% endif %}
                    </div>

                    <div>
                        <h1 class="text-xl font-medium mb-4">{{ line_item.title | link_to: line_item.product.url }}</h1>

                        <table class="table-auto w-full mb-4">
                            <tbody>
                                <tr>
                                    <td class="border">
                                        <border-gray-200 class="px-4 py-2">Price</border-gray-200>
                                        <border-gray-200 class="px-4 py-2">{{ line_item.original_price |  money }}</border-gray-200>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="border">
                                        <border-gray-200 class="px-4 py-2">Quantity</border-gray-200>
                                        <border-gray-200 class="px-4 py-2">{{ line_item.quantity }}</border-gray-200>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="border">
                                        <border-gray-200 class="px-4 py-2">Final Price</border-gray-200>
                                        <border-gray-200 class="px-4 py-2">{{ line_item.final_line_price |  money}}</border-gray-200>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="text-gray-500 mb-4">
                            {{ line_item.product.description |  truncatewords: 15 }}
                        </div>
                    </div>

                    <div>
                        <h1 class="font-medium mb-4">Delivery Address</h1>
                        <div class="text-gray-500 mb-4">
                            {{ order.shipping_address |  format_address }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>